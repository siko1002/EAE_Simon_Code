<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="5dp"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Title"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/authors_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Author(s): John Smith, Jane Doe"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/publish_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Publication Date: January 1, 2020"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/isbn_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ISBN: 123-456-7890"
            android:textSize="16sp" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
